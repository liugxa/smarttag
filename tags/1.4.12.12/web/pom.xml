<?xml version="1.0" encoding="UTF-8"?>

<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.platform.gui.framework.smart</groupId>
		<artifactId>smarttag-framework</artifactId>
		<version>1.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>smarttag-web</artifactId>
	
	<packaging>war</packaging>
	<name>SmartTag Web Application</name>

	<build>
    	<finalName>smarttag</finalName>
    	<plugins>
    		<plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                   <source>1.5</source>
                   <target>1.5</target>			   
                </configuration>
            </plugin>
    		<plugin>
    			<groupId>org.mortbay.jetty</groupId>
    			<artifactId>maven-jetty-plugin</artifactId>
    			<version>6.1.5</version>
    			<configuration>
    				<scanIntervalSeconds>10</scanIntervalSeconds>
    			</configuration>
    		</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<webResources>
			            <resource>
			                <directory>src/main/java</directory>
							<includes>
								<include>**/*.java</include>
							</includes>
							<targetPath>WEB-INF/src</targetPath>	 
			             </resource>
					</webResources>
				</configuration>
			</plugin>
    	</plugins>			
    </build>
			
	<dependencies>
		<dependency>
			<groupId>com.platform.gui.framework.smart</groupId>
			<artifactId>smarttag-jar</artifactId>
			<version>1.1-SNAPSHOT</version>
		</dependency>
    </dependencies>
</project>
