<?xml version="1.0" encoding="UTF-8"?>

<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.platform.gui.framework.smart</groupId>
		<artifactId>smarttag-framework</artifactId>
		<version>1.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>smarttag-web</artifactId>
	
	<packaging>war</packaging>
	<name>SmartTag Web Application</name>

    <build>
    	<finalName>smarttag-web</finalName>
    	<plugins>
    		<plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                   <source>1.5</source>
                   <target>1.5</target>			   
                </configuration>
            </plugin>
    		<plugin>
    			<groupId>org.mortbay.jetty</groupId>
    			<artifactId>maven-jetty-plugin</artifactId>
    			<version>6.1.5</version>
    			<configuration>
    				<scanIntervalSeconds>10</scanIntervalSeconds>
    			</configuration>
    		</plugin>
    	</plugins>
    </build>
			
	<dependencies>
		<dependency>
			<groupId>com.platform.gui.framework.smart</groupId>
			<artifactId>smarttag</artifactId>
			<version>1.1-SNAPSHOT</version>
		</dependency>
    </dependencies>
</project>
